<UserControl x:Class="AlprGUI.ComPortsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <StackPanel>
            <TextBlock Text="Manage COM Ports" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="ComPortsList" Height="200" SelectionChanged="ComPortsList_SelectionChanged">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Name}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button x:Name="AddPairButton" Content="Add ports pair" Margin="5" Click="AddPairButton_Click"/>
                <Button x:Name="EditPairButton" Content="Edit Pair" Margin="5" Click="EditPairButton_Click"/>
                <Button x:Name="RemovePairButton" Content="Remove Pair" Margin="5" Click="RemovePairButton_Click"/>
            </StackPanel>
            <StackPanel x:Name="PairFieldsStackPanel" Orientation="Vertical" Margin="10"/>
        </StackPanel>
    </Grid>
</UserControl>
