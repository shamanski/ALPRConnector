<UserControl x:Class="AlprGUI.LogBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AlprGUI"
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <CheckBox x:Name="DebugCheckBox" Content="Enable Debug Logging" Checked="DebugCheckBox_Checked" Unchecked="DebugCheckBox_Unchecked" Grid.Row="0"/>
        <RichTextBox x:Name="LogRichTextBox" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                     IsReadOnly="True" Background="Black" Foreground="White" Grid.Row="1"/>
    </Grid>
</UserControl>

