<UserControl x:Class="AlprGUI.RegionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Canvas x:Name="canvas" Grid.Row="0">
            <Image x:Name="imageControl" Stretch="Uniform" />
        </Canvas>

        <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Bottom" 
                    Margin="0,10,0,10"
                    Grid.Row="1">
            <Button Content="Select LPR area" Margin="5" Click="SelectAreaButton_Click" />
            <Button Content="Button 1" Margin="5" />
            <ComboBox x:Name="cameraComboBox" Width="150" Margin="5" DisplayMemberPath="Name" />
            <Button Content="Start" Margin="5" Click="StartButton_Click" />
        </StackPanel>
    </Grid>
</UserControl>
