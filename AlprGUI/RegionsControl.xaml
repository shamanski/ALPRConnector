<UserControl x:Class="AlprGUI.RegionsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <Button Content="Select LPR area" Margin="5" Click="SelectAreaButton_Click" />
            <Button Content="Save" Margin="5" Click="SaveButton_Click"/>
            <ComboBox x:Name="cameraComboBox" Width="150" Margin="5" DisplayMemberPath="Name" />
            <Button Content="Start" Margin="5" Click="StartButton_Click" />
        </StackPanel>
        <Canvas x:Name="canvas" Grid.Row="0"  MouseDown="ImageControl_MouseDown" MouseMove="ImageControl_MouseMove" MouseUp="ImageControl_MouseUp">
            <Image x:Name="imageControl" Stretch="UniformToFill"/>
            
        </Canvas>
    </Grid>
</UserControl>
